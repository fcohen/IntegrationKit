{
  "name": "BettingAPP",
  "type": "flogo:app",
  "version": "0.0.1",
  "description": "",
  "triggers": [
    {
      "name": "Receive HTTP Message",
      "ref": "github.com/TIBCOSoftware/flogo-contrib/trigger/lambda",
      "description": "Simple REST Trigger",
      "settings": {
        "port": "80"
      },
      "id": "receive_http_message",
      "handlers": [
        {
          "actionMappings": {
            "input": [
              {
                "mapTo": "userId",
                "type": 1,
                "value": "content.userId"
              }
            ],
            "output": [
              {
                "mapTo": "code",
                "type": 2,
                "value": 200
              },
              {
                "mapTo": "data",
                "type": 1,
                "value": "message"
              }
            ]
          },
          "settings": {
            "method": "POST",
            "path": "/createNotif"
          },
          "actionId": "create_notification"
        }
      ]
    }
  ],
  "actions": [
    {
      "description": "Flow for creating Notifications",
      "data": {
        "flow": {
          "name": "CreateNotification",
          "type": 1,
          "attributes": [],
          "rootTask": {
            "id": "root",
            "type": 1,
            "tasks": [
              {
                "id": "log_2",
                "name": "Log Message",
                "description": "Simple Log Activity",
                "type": 1,
                "activityType": "github-com-tibco-software-flogo-contrib-activity-log",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                "attributes": [
                  {
                    "name": "message",
                    "value": "Receive Request for Notification",
                    "required": false,
                    "type": "string"
                  },
                  {
                    "name": "flowInfo",
                    "value": "false",
                    "required": false,
                    "type": "boolean"
                  },
                  {
                    "name": "addToFlow",
                    "value": "false",
                    "required": false,
                    "type": "boolean"
                  }
                ],
                "inputMappings": [
                  {
                    "type": 1,
                    "value": "$flow.userId",
                    "mapTo": "message"
                  }
                ]
              },
              {
                "id": "rest_3",
                "name": "Invoke REST Service",
                "description": "Simple REST Activity",
                "type": 1,
                "activityType": "github-com-tibco-software-flogo-contrib-activity-rest",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/rest",
                "attributes": [
                  {
                    "name": "method",
                    "value": "POST",
                    "required": true,
                    "type": "string"
                  },
                  {
                    "name": "uri",
                    "value": "https://integration.cloud.tibcoapps.com/5mobzrukrvjryl7nu2uhd3r23h7djq56/createNotif",
                    "required": true,
                    "type": "string"
                  },
                  {
                    "name": "proxy",
                    "value": "",
                    "required": false,
                    "type": "string"
                  },
                  {
                    "name": "pathParams",
                    "value": null,
                    "required": false,
                    "type": "params"
                  },
                  {
                    "name": "queryParams",
                    "value": null,
                    "required": false,
                    "type": "params"
                  },
                  {
                    "name": "header",
                    "value": {
                      "content-type": "application/json"
                    },
                    "required": false,
                    "type": "params"
                  },
                  {
                    "name": "skipSsl",
                    "value": "false",
                    "required": false,
                    "type": "boolean"
                  },
                  {
                    "name": "content",
                    "value": null,
                    "required": false,
                    "type": "any"
                  }
                ],
                "inputMappings": [
                  {
                    "type": 4,
                    "value": {
                      "userId": "{{$flow.userId}}",
                      "title": "Betting started",
                      "description": "Betting has been started for Game Type: Tennis"
                    },
                    "mapTo": "content"
                  }
                ]
              },
              {
                "id": "log_4",
                "name": "Log Message (2)",
                "description": "Simple Log Activity",
                "type": 1,
                "activityType": "github-com-tibco-software-flogo-contrib-activity-log",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/log",
                "attributes": [
                  {
                    "name": "message",
                    "value": "send response",
                    "required": false,
                    "type": "string"
                  },
                  {
                    "name": "flowInfo",
                    "value": "false",
                    "required": false,
                    "type": "boolean"
                  },
                  {
                    "name": "addToFlow",
                    "value": "false",
                    "required": false,
                    "type": "boolean"
                  }
                ]
              },
              {
                "id": "actreply_5",
                "name": "Reply To Trigger",
                "description": "Simple Reply Activity",
                "type": 1,
                "activityType": "github-com-tibco-software-flogo-contrib-activity-actreply",
                "activityRef": "github.com/TIBCOSoftware/flogo-contrib/activity/actreply",
                "attributes": [
                  {
                    "name": "mappings",
                    "value": [
                      {
                        "mapTo": "message",
                        "type": 1,
                        "value": "$activity[rest_3].result"
                      }
                    ],
                    "required": false,
                    "type": "array"
                  }
                ]
              }
            ],
            "links": [
              {
                "id": 1,
                "from": "log_2",
                "to": "rest_3",
                "type": 0
              },
              {
                "id": 2,
                "from": "rest_3",
                "to": "log_4",
                "type": 0
              },
              {
                "id": 3,
                "from": "log_4",
                "to": "actreply_5",
                "type": 0
              }
            ],
            "attributes": []
          }
        }
      },
      "id": "create_notification",
      "metadata": {
        "input": [
          {
            "name": "userId",
            "type": "string"
          }
        ],
        "output": [
          {
            "name": "message",
            "type": "string"
          }
        ]
      },
      "ref": "github.com/TIBCOSoftware/flogo-contrib/action/flow"
    }
  ]
}
